    @section Scripts {
        <script type="text/javascript">
            $(document).ready(function () {
                var first = $("#cardGuildQuest");
                first.collapse("show");
            });
        </script>
        <script type="text/javascript">

            document.addEventListener('DOMContentLoaded', function () {
                $('#button1').on('click', function () {
                    $('#erdIframe2').collapse("hide");
                    $('#button2')
                        .find('[data-fa-processed]')
                        .toggleClass('fa-angle-down', false)
                        .toggleClass('fa-angle-up', true);
                    $(this)
                        .find('[data-fa-processed]')
                        .toggleClass('fa-angle-down')
                        .toggleClass('fa-angle-up');
                });

                $('#button2').on('click', function () {
                    $('#erdIframe1').collapse("hide");
                    $('#button1')
                        .find('[data-fa-processed]')
                        .toggleClass('fa-angle-down', false)
                        .toggleClass('fa-angle-up', true);
                    $(this)
                        .find('[data-fa-processed]')
                        .toggleClass('fa-angle-down')
                        .toggleClass('fa-angle-up');
                });

                //$('#list-example a').on('click', function () {
                $('#navSide a').on('click', function () {
                    clickedBtn = $(this);

                    $(this).parent().find('.active').removeClass('active');
                    $(this).addClass('active');
                    ;


                    var target;
                    dataFullList = clickedBtn.data();
                    $.each(dataFullList, function (index, value) {
                        if (index == "target") {
                            target = value.substring(1);
                        }
                    });
                    $(".project").each(function (index, value) {
                        if (value.id == target)
                            $('#' + value.id).collapse("show");
                        else
                            $('#' + value.id).collapse("hide");
                    });
                });
            });

        </script>

        <script type="text/javascript">
            //   jQuery(document).ready(function($){
            $(document).ready(function () {
                var url = window.location.href;

                // Will only work if string in href matches with location
                $('.nav a[href="' + url + '"]').addClass('active');

                // Will also work for relative and absolute hrefs
                $('.nav a').filter(function () {
                    return this.href == url;
                }).addClass('active');
            });

        </script>
    }
 

