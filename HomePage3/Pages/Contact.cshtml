@page
@using Microsoft.Extensions.Configuration
@model HomePage3.Pages.ContactModel

@{
    ViewData["Title"] = "Contact";
}

<div id="contact" class="container mt-1">
    <div class="row mt-1">
        <div id="contactForm" class="form-horizontal pl-md-4 mx-auto w-100">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <div class="form-group row mx-1">
                        <div class="col-md-2">
                            <label asp-for="Name" class="col-form-label-lg"></label>
                        </div>
                        <div class="col-md-10 ml-1">
                            <input asp-for="Name" placeholder="Enter your name here" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mx-1">
                        <div class="col-md-2">
                            <label asp-for="Email" class="col-form-label-lg"></label>
                        </div>
                        <div class="col-md-10 ml-1">
                            <input asp-for="Email" placeholder="Enter your email address here" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mb-4 mx-1">
                        <div class="col-md-2">
                            <label asp-for="Subject" class="col-form-label-lg"></label>
                        </div>
                        <div class="col-md-10 ml-1">
                            <input asp-for="Subject" placeholder="Enter the subject of your email here" class="form-control" />
                            <span asp-validation-for="Subject" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row mx-1">
                        <div class="col-md-2">
                            <label asp-for="Message" class="col-form-label-lg"></label>
                        </div>
                        <div class="col-md-10 ml-1">
                            <textarea rows="8" cols="70" input asp-for="Message" placeholder="Enter your message here" class="form-control"> </textarea>
                            <span asp-validation-for="Message" class="text-danger"></span>
                        </div>
                    </div>

                    <input type="submit" class="btn mx-sm-auto">
                </div>
            </form>
        </div>
    </div>
</div>
